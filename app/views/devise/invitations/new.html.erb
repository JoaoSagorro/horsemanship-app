<h2><%= t "devise.invitations.new.header" %></h2>

<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="form-inputs">
      <%= f.input field %>
      <%= f.input :role, as: :select, collection: ['professor', 'aluno'], prompt: "Select role", input_html: {class: "form-select", placeholder: "Selecionar uma função"} %>
    </div>
  <% end -%>

  <div class="form-actions">
    <%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
  </div>
<% end %>
