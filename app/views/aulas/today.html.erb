<%= render "booked_class_card" %>
<h1>This is the today page</h1>

<% @aulas.each do |aula| %>
  <% aula.user_ids.each do |user| %>
    <%= aula.title if user === current_user.id %>

    <div data-controller="book-class" class="card">
      <div class="card-header">
        <%= aula.class_type %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= aula.title %></h5>
        <p class="card-text"><%= aula.description %></p>
          <button data-book-class-target="toggle" data-action="click->book-class#booked" class="btn btn-primary" >
            Book
          </button>
      </div>
    </div>

  <% end %>
<% end %>
