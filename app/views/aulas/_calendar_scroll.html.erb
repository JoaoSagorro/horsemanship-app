<div class="d-flex justify-content-start overflow-banner">
  <% Date.today.all_month.to_a.each do |day| %>
    <div class="card d-flex justify-content-center col-2 date-banner-card mx-3" >
      <div class="d-flex flex-column card-body justify-content-center align-items-center" >
        <h2>
          <%= day.strftime("%d") %>
        </h2>
        <p>
          <%= day.strftime("%b") %>
        </p>
      </div>
    </div>
  <% end %>
</div>
