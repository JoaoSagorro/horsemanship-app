<h1>Here will be all the classes for the day</h1>

<% if user_signed_in? %>
  <% if current_user.admin? %>
    <%= link_to "Create a new class", new_aula_path %>
  <% end %>
<% end %>


<% @aulas.each do |aula| %>
  <% if  aula.occurs_date === Date.today %>
    <ul>
      <%= link_to "Edit", edit_aula_path(aula.id) %>
      <%= link_to "Destroy", aula_path(aula.id), data: { turbo_method: :delete, turbo_confirm: "Tem a certeza?" } %>
      <li>
        <%= aula.occurs_date.strftime("%a, %d %b %Y") %>
      </li>

      <li>
        <%= aula.start_time.hour %><%=aula.start_time.min > 0 ? ":" + aula.start_time.min.to_s : "" %>h
      </li>

      <li>
        <%= aula.end_time.hour %><%=aula.end_time.min > 0 ? ":" + aula.end_time.min.to_s : "" %>h
      </li>

      <%= button_to "Book", booked_class_aula_path(aula), data: { turbo_method: :patch, turbo_confirm: "EstÃ¡ feito!" } %>

      <% if aula.booked? %>
        <li>
          You're booked
        </li>
      <% else %>
        <li>
          You're not booked
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
